generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Adapter Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Core App Models (Modified to match User Request)

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("student") // 'student' | 'admin'
  isBlocked     Boolean   @default(false)
  
  // New Profile Fields
  coins         Float     @default(100.0)
  bio           String?
  phoneNumber   String?
  
  createdAt     DateTime  @default(now())

  accounts Account[]
  sessions Session[]

  items         Item[]         @relation("UserItems")
  bookings      Booking[]      @relation("UserBookings")
  notifications Notification[]
  
  // New Relations
  sentTransactions     Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")
  wishlist             Wishlist[]
}

model Item {
  id           String         @id @default(cuid())
  title        String
  description  String
  price        Float
  image        String?        // Main thumbnail (kept for backward compatibility)
  
  // New Item Fields
  images       String[]       // format: "url1", "url2"
  category     String         @default("Other")
  condition    String         @default("Used") // 'New' | 'Like New' | 'Good' | 'Fair' | 'Poor'
  type         String         @default("Rent") // 'Sell' | 'Rent'
  
  status       String         @default("active") // 'active' | 'inactive' | 'sold'
  
  ownerId      String
  owner        User           @relation("UserItems", fields: [ownerId], references: [id], onDelete: Cascade)
  
  availability Availability[]
  bookings     Booking[]
  
  // New Relations
  transactions Transaction[]
  wishlistedBy Wishlist[]
  
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Availability {
  id        String @id @default(cuid())
  itemId    String
  dayOfWeek String // "Monday", "Tuesday", etc.
  item      Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, dayOfWeek])
}

model Booking {
  id         String   @id @default(cuid())
  itemId     String
  item       Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  borrowerId String
  borrower   User     @relation("UserBookings", fields: [borrowerId], references: [id], onDelete: Cascade)
  date       String // The specific day requested (e.g., "2024-03-20")
  status     String   @default("pending") // 'pending' | 'accepted' | 'rejected'
  createdAt  DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// New Models

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  type        String   // 'PURCHASE', 'RENT', 'DEPOSIT', 'WITHDRAWAL'
  status      String   @default("COMPLETED")
  
  fromUserId  String?
  fromUser    User?    @relation("SentTransactions", fields: [fromUserId], references: [id])
  
  toUserId    String?
  toUser      User?    @relation("ReceivedTransactions", fields: [toUserId], references: [id])
  
  itemId      String?
  item        Item?    @relation(fields: [itemId], references: [id])
  
  createdAt   DateTime @default(now())
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, itemId])
}
