generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Adapter Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}




// Core App Models (Modified to match User Request)

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("student") // 'student' | 'admin'
  isBlocked     Boolean   @default(false)
  pendingFine   Float     @default(0)
  
  // New Profile Fields
  coins         Float     @default(500.0)
  bio           String?
  phoneNumber   String?
  year          String?   // e.g., "1st Year", "2nd Year"
  branch        String?   // e.g., "CSE", "ECE"
  section       String?   // e.g., "A", "B"
  address       String?
  
  createdAt     DateTime  @default(now())

  accounts Account[]
  sessions Session[]

  items         Item[]         @relation("UserItems")
  bookings      Booking[]      @relation("UserBookings")
  notifications Notification[]
  
  // New Relations
  sentTransactions     Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")

  complaints           Complaint[]   // User who filed the complaint
  adminActions         AdminActionLog[] @relation("AdminActions")
  adminTargetActions   AdminActionLog[] @relation("AdminTargetUser")
}

model Item {
  id           String         @id @default(cuid())
  title        String
  description  String
  price        Float
  image        String?        // Main thumbnail (kept for backward compatibility)
  
  // New Item Fields
  images       String[]       // format: "url1", "url2"
  category     String         @default("Other")
  condition    String         @default("Used") // 'New' | 'Like New' | 'Good' | 'Fair' | 'Poor'
  type         String         @default("Rent") // 'Sell' | 'Rent'
  
  // Enhanced for Time-Slot Renting
  rentCoins    Float          @default(0)
  date         String?        // YYYY-MM-DD (for specific date availability)
  timeSlot     String?        // 'Morning' | 'Evening' (ENUM simulation)
  
  // New Rental Specific Fields
  rentalDuration String?      // e.g. "1 Month", "2 Weeks"
  availableFrom  String?      // YYYY-MM-DD
  availableUntil String?      // YYYY-MM-DD
  
  status       String         @default("active") // 'active' | 'inactive' | 'sold' | 'AVAILABLE' | 'PENDING' | 'BOOKED' | 'COMPLETED' | 'EXPIRED'
  
  ownerId      String
  owner        User           @relation("UserItems", fields: [ownerId], references: [id], onDelete: Cascade)
  
  availability Availability[]
  bookings     Booking[]
  
  // New Relations
  transactions Transaction[]

  
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Availability {
  id        String @id @default(cuid())
  itemId    String
  dayOfWeek String // "Monday", "Tuesday", etc.
  item      Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, dayOfWeek])
}

model Booking {
  id         String   @id @default(cuid())
  itemId     String
  item       Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  borrowerId String
  borrower   User     @relation("UserBookings", fields: [borrowerId], references: [id], onDelete: Cascade)
  
  // Legacy support
  date       String? // The specific day requested (e.g., "2024-03-20")
  
  // New Range Support
  startDate  String? // YYYY-MM-DD
  endDate    String? // YYYY-MM-DD
  totalPrice Float?  // Store the calculated total price for this booking
  pickupLocation String? // Location specified by owner upon acceptance

  timeSlot   String? // 'Morning' | 'Evening'
  
  isReturned Boolean  @default(false) // Borrower confirmed return
  isReceived Boolean  @default(false) // Owner confirmed receipt
  
  status     String   @default("pending") // 'pending' | 'accepted' | 'rejected' | 'PENDING' | 'ACCEPTED' | 'REJECTED' | 'CANCELLED' | 'COMPLETED' | 'RECEIVED' | 'RETURNED' | 'PENDING_OWNER_CONFIRMATION' | 'PENDING_BORROWER_CONFIRMATION' | 'SUCCESSFUL'
  createdAt  DateTime @default(now())
  
  complaints Complaint[]
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// New Models

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  platformFee Float    @default(0) // Fee deducted by platform
  type        String   // 'RENT_PAYMENT' | 'REFUND' | 'FINE' | 'ADMIN_ADJUSTMENT' | 'PURCHASE'
  status      String   @default("COMPLETED")
  
  fromUserId  String?
  fromUser    User?    @relation("SentTransactions", fields: [fromUserId], references: [id])
  
  toUserId    String?
  toUser      User?    @relation("ReceivedTransactions", fields: [toUserId], references: [id])
  
  itemId      String?
  item        Item?    @relation(fields: [itemId], references: [id])
  
  referenceId  String?  // bookingId or complaintId
  balanceAfter Float?   // user's balance after this transaction
  
  createdAt   DateTime @default(now())
}



model Complaint {
  id               String   @id @default(cuid())
  bookingId        String
  booking          Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  complainerId     String
  complainer       User     @relation(fields: [complainerId], references: [id], onDelete: Cascade)
  
  description      String
  status           String   @default("OPEN") // 'OPEN' | 'UNDER_REVIEW' | 'RESOLVED' | 'REJECTED' | 'ACTION_TAKEN'
  adminNotes       String?
  resolutionAction String   @default("NONE") // 'NONE' | 'ROLLBACK' | 'FINE' | 'WARNING'
  
  createdAt        DateTime @default(now())
}

model AdminActionLog {
  id           String   @id @default(cuid())
  adminId      String
  admin        User     @relation("AdminActions", fields: [adminId], references: [id])
  actionType   String   // 'BLOCK_USER' | 'UNBLOCK_USER' | 'ROLLBACK' | 'FINE' | 'VERIFY_COMPLAINT' | 'REJECT_COMPLAINT'
  targetUserId String?
  targetUser   User?    @relation("AdminTargetUser", fields: [targetUserId], references: [id])
  bookingId    String?
  complaintId  String?
  coinsChanged Float?
  notes        String?
  createdAt    DateTime @default(now())
}

model SystemSettings {
  id                      String   @id @default(cuid())
  rentServiceChargePercent Float    @default(0.0) // Percentage (e.g., 5.0 for 5%)
  sellServiceChargePercent Float    @default(0.0) // Percentage (e.g., 2.0 for 2%)
  updatedAt               DateTime @updatedAt
}
