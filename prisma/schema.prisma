generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("student")
  isBlocked     Boolean   @default(false)
  pendingFine   Float     @default(0)
  coins         Float     @default(200.0)
  bio           String?
  phoneNumber   String?
  year          String?
  branch        String?
  section       String?
  address       String?
  createdAt     DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
  items         Item[]           @relation("UserItems")
  bookings      Booking[]        @relation("UserBookings")
  notifications Notification[]
  sentTransactions     Transaction[]    @relation("SentTransactions")
  receivedTransactions Transaction[]    @relation("ReceivedTransactions")
  complaints           Complaint[]
  adminActions         AdminActionLog[] @relation("AdminActions")
  adminTargetActions   AdminActionLog[] @relation("AdminTargetUser")
  depositRequests      DepositRequest[]
}

model DepositRequest {
  id           String   @id @default(cuid())
  userId       String
  amount       Float
  upiId        String
  message      String?
  status       String   @default("PENDING")
  adminMessage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Item {
  id             String         @id @default(cuid())
  title          String
  description    String
  price          Float
  status         String         @default("active")
  ownerId        String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  image          String?
  category       String         @default("Other")
  condition      String         @default("Used")
  images         String[]
  type           String         @default("Rent")
  date           String?
  rentCoins      Float          @default(0)
  timeSlot       String?
  availableFrom  String?
  availableUntil String?
  rentalDuration String?
  availability   Availability[]
  bookings       Booking[]
  owner          User           @relation("UserItems", fields: [ownerId], references: [id], onDelete: Cascade)
  transactions   Transaction[]
}

model Availability {
  id        String @id @default(cuid())
  itemId    String
  dayOfWeek String
  item      Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, dayOfWeek])
}

model Booking {
  id             String      @id @default(cuid())
  itemId         String
  borrowerId     String
  date           String?
  status         String      @default("pending")
  createdAt      DateTime    @default(now())
  timeSlot       String?
  endDate        String?
  startDate      String?
  totalPrice     Float?
  pickupLocation String?
  isReceived     Boolean     @default(false)
  isReturned     Boolean     @default(false)
  borrower       User        @relation("UserBookings", fields: [borrowerId], references: [id], onDelete: Cascade)
  item           Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  complaints     Complaint[]
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id           String   @id @default(cuid())
  amount       Float
  type         String
  status       String   @default("COMPLETED")
  fromUserId   String?
  toUserId     String?
  itemId       String?
  createdAt    DateTime @default(now())
  balanceAfter Float?
  referenceId  String?
  platformFee  Float    @default(0)
  fromUser     User?    @relation("SentTransactions", fields: [fromUserId], references: [id])
  item         Item?    @relation(fields: [itemId], references: [id])
  toUser       User?    @relation("ReceivedTransactions", fields: [toUserId], references: [id])
}

model Complaint {
  id               String   @id @default(cuid())
  bookingId        String
  complainerId     String
  description      String
  status           String   @default("OPEN")
  createdAt        DateTime @default(now())
  adminNotes       String?
  resolutionAction String   @default("NONE")
  booking          Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  complainer       User     @relation(fields: [complainerId], references: [id], onDelete: Cascade)
}

model AdminActionLog {
  id           String   @id @default(cuid())
  adminId      String
  actionType   String
  targetUserId String?
  bookingId    String?
  complaintId  String?
  coinsChanged Float?
  notes        String?
  createdAt    DateTime @default(now())
  admin        User     @relation("AdminActions", fields: [adminId], references: [id])
  targetUser   User?    @relation("AdminTargetUser", fields: [targetUserId], references: [id])
}

model SystemSettings {
  id                       String   @id @default(cuid())
  rentServiceChargePercent Float    @default(0.0)
  sellServiceChargePercent Float    @default(0.0)
  updatedAt                DateTime @updatedAt
}
